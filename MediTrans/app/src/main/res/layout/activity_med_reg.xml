        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRATION FORM"
            android:textSize="18sp"
            android:textColor="#26A69A"
            android:layout_gravity="center"/>


        <EditText
            android:id="@+id/shopName"
            android:hint="Shop Name"
            android:background="@drawable/cell_shape2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_shopname"
            android:inputType="text"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_shopname"
            android:padding="6dp"/>
        <EditText
            android:id="@+id/userName"
            android:hint="User name"
            android:background="@drawable/cell_shape2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textAlignment="center"
            android:drawableLeft="@drawable/ic_userid"
            android:drawableStart="@drawable/ic_userid"
            android:padding="6dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/cell_shape2"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:padding="6dp"
            android:drawableLeft="@drawable/ic_password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_password" />
        <EditText
            android:id="@+id/ownerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Shop Owner Name"
            android:inputType="text"
            android:background="@drawable/cell_shape2"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:padding="6dp"
            android:drawableLeft="@drawable/ic_ownername"
            android:drawableStart="@drawable/ic_ownername" />
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:inputType="number"
            android:background="@drawable/cell_shape2"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:padding="6dp"
            android:drawableLeft="@drawable/ic_mob"
            android:drawableStart="@drawable/ic_mob" />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="text"
            android:background="@drawable/cell_shape2"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:padding="6dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawableStart="@drawable/ic_email" />
        <EditText
            android:id="@+id/shopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Shop Address"
            android:inputType="text"
            android:background="@drawable/cell_shape2"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:padding="6dp"
            android:drawableLeft="@drawable/ic_address"
            android:drawableStart="@drawable/ic_address" />
        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location/City"
            android:inputType="text"
            android:background="@drawable/cell_shape2"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:padding="6dp"
            android:drawableLeft="@drawable/ic_city"
            android:drawableStart="@drawable/ic_city" />
        <EditText
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Open and Close Time"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_clock"
            android:background="@drawable/cell_shape2"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:padding="6dp"
            android:drawableStart="@drawable/ic_clock" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dd"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:hint="Door Delivery Facility"
                android:drawableLeft="@drawable/ic_deli"
                android:layout_marginTop="20dp"
                android:padding="6dp"
                android:textColor="#26A69A"
                android:drawableStart="@drawable/ic_deli" />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rg"
                android:layout_marginTop="20dp"
                >

                <RadioButton
                    android:id="@+id/rba"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="#000"/>

                <RadioButton
                    android:id="@+id/rbb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="#000" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <Button
                android:id= "@+id/bi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#26A69A"
                android:layout_height="wrap_content"
                android:text="REGISTER"/>
            <TextView
                android:id="@+id/btb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:textColor="#EF5350"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
<!--    </LinearLayout>-->
</ScrollView>